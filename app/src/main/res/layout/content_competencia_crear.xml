<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".actividades.ui.competencias.CompetenciaCrear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="14dp"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/fotoPerfil"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_outline_no_photography_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Click para cambiar tu foto" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp"></Space>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <AutoCompleteTextView
                            android:id="@+id/et1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_marginBottom="6dp"

                            android:drawableLeft="@drawable/ic_outline_person_24"
                            android:drawablePadding="8dp"
                            android:hint="Nombre"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <AutoCompleteTextView
                            android:id="@+id/et2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_marginBottom="6dp"
                            android:drawableLeft="@drawable/ic_baseline_location_city_24"

                            android:drawablePadding="8dp"
                            android:hint="Localidad"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <AutoCompleteTextView
                            android:id="@+id/et3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"

                            android:drawableLeft="@drawable/ic_outline_diamond_24"
                            android:drawablePadding="8dp"
                            android:hint="Premio"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <AutoCompleteTextView
                            android:id="@+id/et4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:drawableLeft="@drawable/ic_baseline_description_24"
                            android:drawablePadding="8dp"
                            android:hint="Descripcion"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:singleLine="false" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <AutoCompleteTextView
                            android:id="@+id/et5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:drawableLeft="@drawable/ic_baseline_campaign_24"
                            android:drawablePadding="8dp"
                            android:hint="CampaÃ±a"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:singleLine="false" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <AutoCompleteTextView
                            android:id="@+id/et6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"

                            android:drawableLeft="@drawable/ic_baseline_directions_run_24"
                            android:drawablePadding="8dp"
                            android:hint="Distancia en km"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1">

                            <AutoCompleteTextView
                                android:id="@+id/et7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:clickable="true"
                                android:cursorVisible="false"
                                android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                                android:drawablePadding="8dp"
                                android:focusable="false"
                                android:hint="Fecha"
                                android:inputType="datetime"
                                android:maxLines="1"
                                android:padding="8dp"
                                android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1">

                            <AutoCompleteTextView
                                android:id="@+id/et8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:clickable="true"
                                android:cursorVisible="false"
                                android:drawableLeft="@drawable/ic_baseline_access_time_24"

                                android:drawablePadding="8dp"
                                android:focusable="false"
                                android:hint="Hora"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="8dp"
                                android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_button"
                        android:text="Guardar"
                        android:textColor="#fff"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>